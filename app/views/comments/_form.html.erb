<strong>New Comment</strong>
<%= form_for [@ticket, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <ul>
          <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              </ul>
          <% end %>
    <% end %>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.label :state %>
      <%= f.select :state, @states.map { |s| [s.name, s.id] }, selected: @ticket.state %>
    </p>
    <%= f.submit %>
<% end %>